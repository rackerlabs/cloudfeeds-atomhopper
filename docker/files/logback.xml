<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
    <syslogHost>syslog.staging.ord1.us.ci.rackspace.net</syslogHost>
    <port>514</port>
    <facility>LOCAL3</facility>
    <suffixPattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-4r [%t] %-5p %c - %m%n</suffixPattern>
  </appender>

  <!-- See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender -->
  <appender name="defaultFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>/var/log/atomhopper/atomhopper-logback.log</File>

    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-4r [%t] %-5p %c - %m%n</pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- Keep 30 days of compressed history. -->
      <maxIndex>30</maxIndex>

      <!-- Daily rollover with gzip compression. -->
      <FileNamePattern>/var/log/atomhopper/atomhopper-logback.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
    </rollingPolicy>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="SYSLOG" />
    <appender-ref ref="defaultFile" />
  </root>
</configuration>